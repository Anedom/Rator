<div class="container box-shadow py-4 px-4 mt-4 mb-4">
  <div class="row mt-4">
    <div class="col-2">
      <p><b>Movie:</b></p>
    </div>
    <div class="col-6">
      <p><b>Description:</b></p>
    </div>
    <div class="col-4 d-flex justify-content-end">
      <p><b>Linked?</b></p>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-2">
      <h4>{{data.name}}</h4>
    </div>
    <div class="col-6">
      <h4>{{data.text}}</h4>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      {{#if data.liked}}
      <p href="#" class="btn btn-success">Liked</p>
      {{else}}
      <a href="#" class="btn btn-danger esp-b">Disliked</a>
      {{/if}}
    </div>
  </div>
</div>