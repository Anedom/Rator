<div class="container box-shadow mt-4 mb-4 alt">
  <form action="/user/edit/{{ data.id }}" method="POST">
    <div class="row ">
      <div class="col-md-6 mt-4 mb-4">
        <div class="form-group">
          <label for="descricaoTextArea">NAME:</label>
          <input class="form-control" id="descricaoTextArea" value={{ data.name }} name="name"></input>
        </div>
        <div class="form-group">
          <label for="descricaoTextArea">EMAIL:</label>
          <input class="form-control" id="descricaoTextArea" value={{ data.email }} name="email"></input>
        </div>
        <div class="form-group">
          <label for="descricaoTextArea">ROLE:</label>
          <select class="form-control mb-2" name="role">
            <option value="USER">User</option>
            <option value="CURATOR">Curator</option>
          </select>
        </div>

      </div>
      <div class="col-md-6 d-flex justify-content-center align-items-center mt-4 mb-4">
         <img src={{data.image}} class="profile-page" alt="user">
      </div>
    </div>
    {{#if showCurator}}
    <div class="row">
      <div class="col-md-6 mt-4">
        <div class="form-group">
          <h5>DESCRIPTION:</h5>
          <label for="descricaoTextArea">Try to briefly explain your personality so that you have better result on the platform</label>
          <textarea class="form-control" id="descricaoTextArea" rows="6" name="description">{{ data.description }}</textarea>
        </div>
      </div>
      <div class="col-md-6 mt-4">
        <div class="form-group">
          <h5>GENRE:</h5>
          <label for="descricaoTextArea">Choose your favorite genres:</label>
          <select class="form-control mb-2" name="genre1">
            <option value="action" selected>Action</option>
            <option value="animation">Animation</option>
            <option value="adventure">Adventure</option>
            <option value="comedy">Comedy</option>
            <option value="drama">Drama</option>
            <option value="horror">Horror</option>
            <option value="romance">Romance</option>
            <option value="sci-fi">Sci-fi</option>
            <option value="thriller">Thriller</option>
          </select>
          <select class="form-control mb-2" name="genre2">
            <option value="action">Action</option>
            <option value="animation" selected>Animation</option>
            <option value="adventure">Adventure</option>
            <option value="comedy">Comedy</option>
            <option value="drama">Drama</option>
            <option value="horror">Horror</option>
            <option value="romance">Romance</option>
            <option value="sci-fi">Sci-fi</option>
            <option value="thriller">Thriller</option>
          </select>
          <select class="form-control mb-2" name="genre3">
            <option value="action">Action</option>
            <option value="animation">Animation</option>
            <option value="adventure" selected>Adventure</option>
            <option value="comedy">Comedy</option>
            <option value="drama">Drama</option>
            <option value="horror">Horror</option>
            <option value="romance">Romance</option>
            <option value="sci-fi">Sci-fi</option>
            <option value="thriller">Thriller</option>
          </select>
        </div>
      {{/if}}
      <button type="submit" class="btn btn-outline-secondary mt-2 mb-4" name="action" value="edit">Edit</button>
      <button type="submit" class="btn btn-outline-secondary ml-2 mt-2 mb-4" name="action" value="delete">Delete</button>
      </div>
    </div>
  </form>
</div>
